<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dreamerlxb.recyclerviewdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HeaderAndFooterActivity"
            android:label="@string/title_activity_header_and_footer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SectionActivity"
            android:label="@string/title_activity_section"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StickySectionActivity"
            android:label="@string/title_activity_sticky"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StickySectionDecorActivity"
            android:label="@string/title_activity_section_decoration"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LoadMoreActivity"></activity>
    </application>

</manifest>